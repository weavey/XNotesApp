<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    xmlns:ripple="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_6"
        cardview:cardBackgroundColor="@color/white"
        cardview:cardCornerRadius="@dimen/dp_8"
        cardview:cardElevation="@dimen/dp_5"
        cardview:contentPadding="@dimen/dp_4"
        >

        <com.andexert.library.RippleView
            android:id="@+id/item_grid_ripple"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            ripple:rv_color="@color/ripple_yellow"
            ripple:rv_type="simpleRipple"
            ripple:rv_zoom="true"
            ripple:rv_rippleDuration="100"
            >

            <TextView
                android:id="@+id/item_grid_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="10"
                android:minLines="5"
                android:text="@string/large_text"
                android:textColor="@color/text_color_light_gray"
                android:textSize="@dimen/sp_14"
                />

            <TextView
                android:id="@+id/item_grid_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/item_grid_content"
                android:layout_marginTop="@dimen/dp_4"
                android:text="2016-12-23"
                android:textColor="@color/text_color_light_gray"
                android:textSize="@dimen/sp_12"
                />

        </com.andexert.library.RippleView>

    </android.support.v7.widget.CardView>
</LinearLayout>

